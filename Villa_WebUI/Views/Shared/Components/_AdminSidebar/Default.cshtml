<script>
    // Tüm nav-link sınıfına sahip <a> etiketlerini seçiyoruz
    const navLinks = document.querySelectorAll('.nav-link');

    navLinks.forEach(function(link) {
        // Mouse over eventi
        link.addEventListener('mouseover', function() {
            link.style.backgroundColor = '#95a5a6'; // Gri tonunda renk
            link.style.color = 'white'; // Yazı rengini beyaz yap
        });

        // Mouse out eventi
        link.addEventListener('mouseout', function() {
            link.style.backgroundColor = '#c0392b'; // Eski renk
            link.style.color = 'white'; // Yazı rengini beyaz yap
        });
    });
</script>

